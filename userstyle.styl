            &-literal, &-number, &-variable, &-hexcolor, &-built_in, &-function,
            &-attribute, &-tag &-attr, &-template-variable, &-common, &-cbracket,
            &-link_reference, &-prompt, &-symbol, &-params, &-bullet, &-builtin-name
